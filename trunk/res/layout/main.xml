<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
        
    <!-- MAIN TITLE BAR AND MENU BUTTON -->
    <TableLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:stretchColumns="1" android:background="@drawable/tcp_title320x45">
	    <TableRow android:gravity="right" >
			<Button android:id="@+id/menu" style="@style/ActionButton" 
			android:text="@string/menu" android:textColor="@color/white" >
			</Button>
	    </TableRow>
	</TableLayout>
    
    <!-- LAST TEN UPDATES -->
    <!-- http://www.codeproject.com/webservices/articlerss.aspx?cat=1 -->
	    <TextView  
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:text="Android RSSReader"
	    android:id="@+id/feedtitle"
	    android:background="@color/white"
	    android:textColor="@color/black"
	    />
		<TextView  
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content" 
		    android:text=""
		    android:id="@+id/feedpubdate"
		    />
		<ListView
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:id="@+id/itemlist"
			/>   

</LinearLayout>
