<?xml version="1.0" encoding="utf-8"?><ScrollView android:id="@+id/widget27"android:layout_width="fill_parent"android:layout_height="fill_parent"android:background="@drawable/white_bg"xmlns:android="http://schemas.android.com/apk/res/android"android:scrollbars="vertical">	<LinearLayout	android:layout_width="fill_parent"	android:layout_height="wrap_content"	android:orientation="vertical">		<TextView		android:id="@+id/author"		android:layout_height="wrap_content"		android:layout_width="fill_parent"		android:text="TextView"		android:textSize="14sp"		android:textStyle="bold"		android:textColor="@color/black"		android:layout_marginLeft="20dip"		>		</TextView>				<WebView		android:id="@+id/webviewbody"		android:layout_width="fill_parent"		android:layout_height="0dip"		android:layout_weight="1" 		android:background="@drawable/cpmsg_bg"		android:textSize="12sp"		android:textColor="@color/black"		/>		<TextView		android:id="@+id/linkurl"    	android:layout_width="fill_parent"     	android:layout_height="wrap_content"     	android:autoLink="web"		android:text="TextView"		android:textSize="10sp"		android:textColor="@color/black"		/>	</LinearLayout></ScrollView>